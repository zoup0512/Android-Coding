<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <com.zoup.android.game.guess.ui.components.RandomTextView
        android:id="@+id/random_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14px"
        android:text="0000"
        android:textSize="56sp" />

    <ListView
        android:id="@+id/result_listview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:background="#e4e8f8"
        android:scrollbars="none" />

    <include
        android:id="@+id/numpad_layout"
        layout="@layout/im_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp" />

</LinearLayout>