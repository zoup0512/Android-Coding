<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidCoding" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

        <!-- Customize your theme here. -->
        <style name="im_button">
            <item name="android:background">@drawable/btn_keyboard_selector</item>
            <item name="android:layout_width">0.0dip</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:layout_weight">1</item>
        </style>

        <style name="wheel_button">
            <item name="android:layout_width">0.0dip</item>
            <item name="android:layout_height">@dimen/wheel_height</item>
            <item name="android:layout_weight">1</item>
            <item name="android:background">@drawable/btn_num_selector</item>
            <item name="android:textColor">#6d9eeb</item>
            <item name="android:textSize">30sp</item>
        </style>

        <style name="MenuTextStyle">
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">18sp</item>
        </style>

</resources>